      "source": [
        "def bubble_sort (my_arr):\n",
        "  n = len(my_arr)\n",
        "  swapped = False\n",
        "\n",
        "  for i in range(n-1):\n",
        "    for j in range(n-i-1):\n",
        "      if (my_arr[j] > my_arr[j+1]):\n",
        "        my_arr[j],my_arr[j+1] = my_arr[j+1], my_arr[j]\n",
        "        swapped = True\n",
        "    if not swapped:\n",
        "      break\n",
        "  print(\"Sorted array:\", my_arr)\n"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "bubble_sort([12, 7, 90, 100, 23, 9])"
      ],
